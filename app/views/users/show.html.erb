<h1>My Photos</h1>

<% @images.each do |image|%>
<div class='card bg-light mb-3'>
  <div class='card-body'>
    <%= link_to image_tag(image.photo.url(:thumb)), image_path(image) %>
  <br>
  <br>
  <%= image.likers_count %>
  <%= image.description %>
  <% image.tags.each do |tag| %>
    <div class='tag'>
      @<%= tag.user.username %>
    </div>
  <% end %>
  <%= link_to "Edit Image", edit_image_path(image) %>
  <%= link_to "Tag", new_image_tag_path(image) %>
  <%= link_to "Delete", image_path(image), :class => "btn btn-danger",
                         :data => {:confirm => "You sure?",
                                   :method => "delete"} %>


    <%=  link_to('Like', like_image_path(image), :class => "btn btn-info", method: :post) %>

  </div>
</div>
<%end%>
