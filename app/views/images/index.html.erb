<br>


<% if current_user%>
  <h3> Welcome, <%= current_user.username%></h3>
  <% @images.each do |image|%>
      <%= image_tag(image.photo.url(:thumb)) %>
    <br>
    <br>
    <hr>
    <%= image.description %>
    <%= link_to "Edit Image", edit_image_path(image) %>
    <%= link_to "Delete", image_path(image), :class => "btn btn-danger",
                           :data => {:confirm => "You sure?",
                                     :method => "delete"} %>
  <%end%>
  <% else %>
  <h1>Welcome to PhotoHut</h1>
  <h3>Please login to view photos</h3>
<%end%>
